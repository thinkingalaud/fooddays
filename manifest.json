{
  "manifest_version": 2,

  "name": "Food Days",
  "description": "A new tab page for when it's a food day in the US.",
  "version": "1.3",

  "content_security_policy": "script-src 'self' 'unsafe-eval' https://ssl.google-analytics.com; object-src 'self'",

  "permissions": [
      "storage"
  ],

  "icons": {
    "128": "images/icon.png"
  },

  "browser_action": {
    "default_popup": "popup.html"
  },

  "background": {
    "persistent": true,
    "scripts": ["data.js", "background.js"]
  },

  "chrome_url_overrides": {
    "newtab": "newtab.html"
  }
}
